generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Restaurant {
  id             String          @id @default(uuid())
  name           String
  slug           String          @unique
  createdAt      DateTime        @default(now())
  primaryColor   String          @default("#000000")
  logoUrl        String?
  auditLogs      AuditLog[]
  customers      Customer[]
  inventoryItems InventoryItem[]
  locations      Location[]
  menuItems      MenuItem[]
  orders         Order[]
  reservations   Reservation[]
  tables         Table[]
  users          User[]
}

model Location {
  id           String  @id @default(uuid())
  restaurantId String
  name         String
  address      String
  phone        String?
  timezone     String  @default("Africa/Nairobi")
  isActive     Boolean @default(true)

  // Operational hours
  openingTime String?
  closingTime String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  restaurant     Restaurant      @relation(fields: [restaurantId], references: [id])
  tables         Table[]
  staff          User[]
  inventoryItems InventoryItem[]
  orders         Order[]

  @@index([restaurantId, isActive])
}

model User {
  id            String      @id @default(uuid())
  email         String      @unique
  passwordHash  String?
  name          String?
  phone         String?
  role          String      @default("WAITER")
  restaurantId  String?
  locationId    String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  auditLogs     AuditLog[]
  sessions      Session[]
  location      Location?   @relation(fields: [locationId], references: [id])
  restaurant    Restaurant? @relation(fields: [restaurantId], references: [id])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model MenuItem {
  id           String      @id @default(uuid())
  name         String
  price        Decimal
  restaurantId String
  category     String      @default("Mains")
  description  String?
  imageUrl     String?
  isAvailable  Boolean     @default(true)
  dietaryInfo  String?
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id])
  orderItems   OrderItem[]
  recipe       Recipe[]
}

model InventoryItem {
  id           String                 @id @default(uuid())
  name         String
  unit         String
  restaurantId String
  locationId   String?
  batches      InventoryBatch[]
  location     Location?              @relation(fields: [locationId], references: [id])
  restaurant   Restaurant             @relation(fields: [restaurantId], references: [id])
  transactions InventoryTransaction[]
  recipes      Recipe[]
}

model InventoryBatch {
  id                String                 @id @default(uuid())
  inventoryItemId   String
  quantityInitial   Decimal
  quantityRemaining Decimal
  costPerUnit       Decimal
  receivedAt        DateTime               @default(now())
  expirationDate    DateTime?
  inventoryItem     InventoryItem          @relation(fields: [inventoryItemId], references: [id])
  transactions      InventoryTransaction[]
}

model InventoryTransaction {
  id              String         @id @default(uuid())
  inventoryItemId String
  batchId         String
  quantity        Decimal
  type            String
  orderId         String?
  refundId        String?
  createdAt       DateTime       @default(now())
  batch           InventoryBatch @relation(fields: [batchId], references: [id])
  inventoryItem   InventoryItem  @relation(fields: [inventoryItemId], references: [id])
}

model Recipe {
  id               String        @id @default(uuid())
  menuItemId       String
  inventoryItemId  String
  quantityRequired Decimal
  inventoryItem    InventoryItem @relation(fields: [inventoryItemId], references: [id])
  menuItem         MenuItem      @relation(fields: [menuItemId], references: [id])
}

model Order {
  id                  String               @id @default(uuid())
  restaurantId        String
  locationId          String?
  status              String               @default("PENDING")
  totalAmount         Decimal
  paymentMethod       String               @default("CASH")
  paymentStatus       String               @default("PENDING")
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  customerId          String?
  tableId             String?
  loyaltyTransactions LoyaltyTransaction[]
  location            Location?            @relation(fields: [locationId], references: [id])
  table               Table?               @relation(fields: [tableId], references: [id])
  customer            Customer?            @relation(fields: [customerId], references: [id])
  restaurant          Restaurant           @relation(fields: [restaurantId], references: [id])
  items               OrderItem[]
  payments            Payment[]
  refunds             Refund[]
}

model OrderItem {
  id           String   @id @default(uuid())
  orderId      String
  menuItemId   String
  quantity     Int
  priceAtOrder Decimal
  menuItem     MenuItem @relation(fields: [menuItemId], references: [id])
  order        Order    @relation(fields: [orderId], references: [id])
}

model Refund {
  id        String   @id @default(uuid())
  orderId   String
  amount    Decimal
  reason    String?
  createdAt DateTime @default(now())
  order     Order    @relation(fields: [orderId], references: [id])
}

model Payment {
  id        String  @id @default(uuid())
  orderId   String
  amount    Decimal
  currency  String  @default("KES")
  method    String
  status    String
  reference String?

  // M-Pesa specific fields
  mpesaCheckoutRequestId String?   @unique
  mpesaMerchantRequestId String?
  mpesaReceiptNumber     String?   @unique
  mpesaPhoneNumber       String?
  mpesaTransactionDate   DateTime?

  // Idempotency tracking
  callbackProcessed Boolean   @default(false)
  callbackAttempts  Int       @default(0)
  lastCallbackAt    DateTime?

  metadata  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order Order @relation(fields: [orderId], references: [id])

  @@index([mpesaCheckoutRequestId])
  @@index([status, createdAt])
}

model Customer {
  id                  String               @id @default(uuid())
  restaurantId        String
  phone               String?
  email               String?
  name                String?
  firstName           String?
  lastName            String?
  loyaltyPoints       Int                  @default(0)
  visitsCount         Int                  @default(0)
  averageOrderValue   Decimal              @default(0)
  lifetimeValue       Decimal              @default(0)
  churnRisk           Float?
  
  // Enterprise fields
  segment             String?               // VIP, REGULAR, AT_RISK, CHURNED
  preferences         String?               // JSON string: {"dietaryRestrictions": [], "favoriteItems": []}
  tags                String?               // JSON string: ["vegetarian", "lunch-regular"]
  
  // Marketing & GDPR
  emailOptIn          Boolean               @default(true)
  smsOptIn            Boolean               @default(true)
  whatsappOptIn       Boolean               @default(false)
  preferencesUpdatedAt DateTime?
  
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  birthDate           DateTime?
  lastVisitAt         DateTime?
  
  restaurant          Restaurant           @relation(fields: [restaurantId], references: [id])
  loyaltyTransactions LoyaltyTransaction[]
  orders              Order[]
  reservations        Reservation[]

  @@unique([restaurantId, phone])
  @@unique([restaurantId, email])
  @@index([restaurantId, lifetimeValue])
  @@index([restaurantId, segment])
}

model Table {
  id           String        @id @default(uuid())
  number       String
  capacity     Int
  status       String        @default("AVAILABLE")
  restaurantId String
  locationId   String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  orders       Order[]
  reservations Reservation[]
  location     Location?     @relation(fields: [locationId], references: [id])
  restaurant   Restaurant    @relation(fields: [restaurantId], references: [id])

  @@unique([restaurantId, number])
}

model Reservation {
  id           String     @id @default(uuid())
  restaurantId String
  customerId   String
  tableId      String?
  reserveTime  DateTime
  partySize    Int
  status       String     @default("CONFIRMED")
  notes        String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  table        Table?     @relation(fields: [tableId], references: [id])
  customer     Customer   @relation(fields: [customerId], references: [id])
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}

model LoyaltyTransaction {
  id         String   @id @default(uuid())
  customerId String
  orderId    String?
  points     Int
  type       String
  createdAt  DateTime @default(now())
  order      Order?   @relation(fields: [orderId], references: [id])
  customer   Customer @relation(fields: [customerId], references: [id])
}

model AuditLog {
  id           String     @id @default(uuid())
  restaurantId String
  userId       String?
  action       String
  entityType   String
  entityId     String?
  changes      String?
  createdAt    DateTime   @default(now())
  user         User?      @relation(fields: [userId], references: [id])
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}
